<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/silver"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/white_block_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:text="@string/current_wifi"
            android:textColor="@color/darken"
            android:textSize="@dimen/textLarge"/>

        <ListView
            android:id="@id/wifi_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:divider="@color/silver"
            android:dividerHeight="1px">
        </ListView>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@id/refresh_button"
                android:layout_width="0dip"
                android:layout_height="@dimen/buttonHeight"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/red_selector"
                android:text="@string/scan"
                android:textColor="@color/white"
                android:textSize="@dimen/textMedium"/>

            <Button
                android:id="@id/login_button"
                android:layout_width="0dip"
                android:layout_height="@dimen/buttonHeight"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/red_selector"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/textMedium"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>